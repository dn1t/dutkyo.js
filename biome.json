{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noUnsafeDeclarationMerging": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "jsxQuoteStyle": "double"
    }
  },
  "organizeImports": { "enabled": false },
  "files": {
    "ignore": ["node_modules", "dist"]
  }
}
